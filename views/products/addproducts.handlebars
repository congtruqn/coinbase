<div ng-controller="productsController" nv-file-drop="" uploader="uploader">
	<div class="row" ng-show="divadd">
		<form action="" name="form">
				<div class="form-group">
					<label class="col-sm-3 control-label">Mã sản phẩm</label>
					<div class="col-sm-9"><input class="form-control"  placeholder="Mã sản phẩm"  ng-model="product_code" required="false" readonly="true"></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label">Tên sản phẩm</label>
					<div class="col-sm-9"><input class="form-control"  placeholder="Tên sản phẩm"  ng-model="product_name" required="false"></div>
				</div>


				<div class="form-group">
					<label class="col-sm-3 control-label">Loại sản phẩm</label>
					<div class="col-sm-9">
							<select name ="type" class="form-control" ng-model="product_type" ng-options="type as type.name for type in producttypes" required="true" ></select>
					</div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label">Giá nhập</label>
					<div class="col-sm-9"><input class="form-control"  placeholder="Giá nhập"  ng-model="buy_price" required="false"></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label">Giá bán</label>
					<div class="col-sm-9"><input class="form-control"  placeholder="Giá bán"  ng-model="sell_price" required="false"></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label">Tồn kho</label>
					<div class="col-sm-9"><input class="form-control"  placeholder="Tồn kho"  ng-model="count"></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label">Hình ảnh</label>
					<div class="col-sm-9">
						<div ng-repeat="item in uploader.queue">
							<div ng-show="uploader.isHTML5" ng-thumb="{ file: item._file, height: 80 }"></div>
							<strong>{{ item.file.name }}</strong>
							<button type="button" class="btn btn-danger btn-xs" ng-click="item.remove()">
                                <span class="glyphicon glyphicon-trash"></span> Remove
                            </button>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-3 control-label">Hình ảnh</label>
					<div class="col-sm-9">
						<input type="file" nv-file-select="" uploader="uploader" />
					</div>
				</div>

				
				<div class="form-group">
					<label class="col-sm-3 control-label"></label>
					<div class="col-sm-9">
						<div ng-repeat="(key, value) in productdetails track by $index" class="productdetail form-group">
							<label class="col-sm-3 control-label">{[{value.name}]}</label> 
				        	<div class="col-sm-9"><input type="text" name="{[{value._id}]}" class="form-control" placeholder="{[{value.name}]}" ng-model="productdetails[$index].value"></div>
						</div>
					</div>
				</div>

			
		
		</form>

		<div class="panel-body">
			<button class="btn btn-primary m-r-5 m-b-5" ng-click="saveproducts();">Lưu</button>
			<button class="btn btn-info m-r-5 m-b-5 btn-primary" type="button" ng-click="saveandaddproducts();">Lưu và Thêm sản phẩm cùng loại</button>
			
		</div>

	</div>
</div>
