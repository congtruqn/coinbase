<div ng-controller="editproductsController" nv-file-drop="" uploader="uploader">
	<div class="row" ng-show="divedit">
		<form action="" name="form">
				<div class="form-group">
					<label class="col-sm-3 control-label">Mã sản phẩm</label>
					<div class="col-sm-9"><input class="form-control"  placeholder="Mã sản phẩm"  required="false" hidden="true" ng-model="productinfo.product_code"></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label">Tên sản phẩm</label>
					<div class="col-sm-9"><input class="form-control"  placeholder="Tên sản phẩm"  ng-model="productinfo.product_name" required="false"></div>
				</div>


				<div class="form-group">
					<label class="col-sm-3 control-label">Loại sản phẩm</label>
					<div class="col-sm-9">
							<select name ="type" class="form-control"  ng-model="product_type" ng-options="type as type.name for type in product_detail_info" required="true"></select>
					</div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label">Giá bán</label>
					<div class="col-sm-9"><input class="form-control"  placeholder="Giá bán"  ng-model="productinfo.sell_price" required="false"></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label">Tồn kho</label>
					<div class="col-sm-9"><input class="form-control"  placeholder="Tồn kho"  ng-model="productinfo.count"></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label">Hình ảnh</label>
					<div class="col-sm-9">
						<div class="col-sm-5">
							<div ng-repeat="item in uploader.queue">
								<div ng-show="uploader.isHTML5" ng-thumb="{ file: item._file, height: 100 }"></div>
								<strong>{{ item.file.name }}</strong>
								<button type="button" class="btn btn-danger btn-xs" ng-click="item.remove()">
	                                <span class="glyphicon glyphicon-trash"></span> Remove
	                            </button>
							</div>
						</div>
						<div class="col-sm-5 images_edit">
							<img ng-src="/uploads/{[{productinfo.image_name}]}">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-3 control-label">Hình ảnh</label>
					<div class="col-sm-9">
						<input type="file" nv-file-select="" uploader="uploader" />
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-3 control-label"></label>
					<div class="col-sm-9">
						<div ng-repeat="(key, value) in productinfo.product_detail track by $index" class="productdetail form-group">
							<label class="col-sm-3 control-label">{[{value.detail_name}]}</label> 
				        	<div class="col-sm-9"><input type="text" name="{[{value.detail_name}]}" class="form-control" ng-model="productinfo.product_detail[$index].detail_value"></div>
						</div>
					</div>
				</div>
		</form>
		<div class="panel-body">
			<button class="btn btn-primary m-r-5 m-b-5" ng-click="saveEditproducts();">Lưu</button>
		</div>

	</div>
</div>
