<div ng-controller="productsController">
<section class="content-header">
	<h1>Quản lý sản phẩm</h1>
	<ol class="breadcrumb">
		<li><a><i class="fa fa-dashboard"></i>Trang chủ</a></li>
		<li><a></i>Danh sách sản phẩm</a></li>
	</ol>
</section>

<section class="panel panel-inverse">
	<div class="row">
		<div class="panel-body">
			<button class="btn btn-primary m-r-5 m-b-5" ng-click="openaddproducts(0)">Thêm sản phẩm</button>
		</div>
			<table class="table">
		        <thead>
		            <tr>
		                <th width="25px">#</th>
		                <th>Mã hàng hóa</th>
		                <th>Tên hàng hóa</th>
		                <th>Thuộc tính</th>
		                <th>Giá bán</th>
		                <th>Giá vốn</th>
		                <th>Tồn kho</th>
		                <th width="20px"></th>
		                <th width="20px"></th>
		            </tr>
		        </thead>
		        <tbody>
		            <tr ng-repeat="album in albumList">
		                <td>{[{($index + 1)+((page-1)*15)}]}</td>
		                <td><span>{[{album.product_code}]}</span></td>
		                <td><span>{[{album.product_name}]}</span></td>
		                <td><span>{[{album.product_detail[0].detail_name}]} : {[{album.product_detail[0].detail_value}]}</span></td>
		                <td><span>{[{album.sell_price}]}</span></td>
		                <td><span>{[{album.buy_price}]}</span></td>
		                <td>
		                	<span>{[{album.count}]}</span>
		                </td>
		                <td>
		                    <a href="#" ng-click="openeditproducts(album._id)">
		                        <i class="icon-pencil"></i>
		                    </a>
		                </td>
		                <td>
		                	<a ng-click="delUser($index)" >
		                        <i class="icon-remove-circle"></i>
		                    </a>
		                </td>
		            </tr>
		        </tbody>
    		</table>
    	<div id="example2_paginate" class="dataTables_paginate paging_simple_numbers">
    		<ul class="pagination">
    			<li ng-repeat="item in pagedata">
            		<a href="administrator/listproducts/{[{item}]}">{[{item}]}</a>
        		</li>
    		</ul>
    	</div>
	</div>
	
</section>
</div>